<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg">

    <SurfaceView
        android:id="@+id/sv_face"
        android:layout_width="810dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="46px"
        android:layout_marginLeft="40px"
        android:layout_marginTop="46px"
        android:background="@drawable/bg_black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_marginTop="46px"
        android:layout_toRightOf="@id/sv_face"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="@drawable/bg_black"
            android:padding="30dp">

            <TextView
                android:id="@+id/tv_lifang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="杭州立方控股股份有限公司"
                android:textColor="#1bb3d9"
                android:textSize="35sp" />

            <View
                style="@style/divider"
                android:layout_below="@id/tv_lifang"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/tv_lifang"
                android:layout_below="@id/tv_lifang"
                android:layout_marginTop="30dp"
                android:text="19:30"
                android:textColor="#1bb3d9"
                android:textSize="72sp" />

            <TextView
                android:id="@+id/tv_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_lifang"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="48dp"
                android:layout_toRightOf="@id/tv_time"
                android:text="01/01"
                android:textColor="#1bb3d9"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/tv_time"
                android:layout_marginLeft="35dp"
                android:layout_toRightOf="@id/tv_time"
                android:text="星期五"
                android:textColor="#1bb3d9"
                android:textSize="20sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_black"
            android:gravity="center">

            <RelativeLayout
                android:id="@+id/rl_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="invisible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:src="@mipmap/icon_shuazheng" />

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:src="@mipmap/zi_shuazheng" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_no_net"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="invisible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:src="@mipmap/icon_wangluoyichang" />

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:src="@mipmap/zi_wangluoyichang" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_paizhao"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="invisible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:src="@mipmap/icon_duizhun" />

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:src="@mipmap/zi_duizhunpaizhao" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_yanzheng"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:visibility="invisible">


                <ImageView
                    android:id="@+id/iv_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="50dp"
                    android:background="@mipmap/icon_yanzhengchenggong" />

                <ImageView
                    android:id="@+id/iv_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="55dp"
                    android:layout_toRightOf="@id/iv_icon"
                    android:background="@mipmap/zi_yanzhengchenggong" />

                <LinearLayout
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/iv_icon"
                    android:layout_below="@id/iv_icon"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_name"
                        style="@style/tv_message"
                        android:layout_marginTop="10dp"
                        android:text="姓名 : " />

                    <TextView
                        android:id="@+id/tv_male"
                        style="@style/tv_message"
                        android:layout_marginTop="10dp"
                        android:text="性别 : " />

                    <TextView
                        android:id="@+id/tv_birthday"
                        style="@style/tv_message"
                        android:layout_marginTop="10dp"
                        android:text="出生 : " />

                    <TextView
                        android:id="@+id/tv_add"
                        style="@style/tv_message"
                        android:layout_marginTop="10dp"
                        android:text="住址 : " />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
